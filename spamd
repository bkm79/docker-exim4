#!/bin/bash
(useradd spamd | true)
sed -i "s/SQL_PASSWORD/$SQL_PASSWORD/g" /etc/mail/spamassassin/sql.cf
cd /var/lib/
(rm 99_wentor.cf | true)
chmod 777 -R /var/spool/sa-exim/
wget http://www.wentor.ru/download/spamassassin/99_wentor.cf
sa-update
sa-compile
/usr/sbin/spamd -q -x -l -u spamd --max-children=64 --min-children=8 --min-spare=8 --max-spare=32
